    {message && (
      <div class={`mb-4 p-4 rounded-lg ${messageType === 'error' ? 'bg-red-50 border border-red-200 text-red-800' : 'bg-green-50 border border-green-200 text-green-800'}`}>
        {message}
      </div>
    )}
    
    <!-- Alert dla brakujƒÖcych danych -->
