              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Od *</label>
                <input 
                  type="date" 
                  name="startDate" 
                  value={course.startDate}
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Do *</label>
                <input 
                  type="date" 
                  name="endDate" 
                  value={course.endDate}
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
                />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Lokalizacja</label>
              <input 
                type="text" 
                name="location" 
                value={course.location || 'Gda≈Ñsk'}
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
              />
            </div>
          </div>

          <!-- Szczeg√≥≈Çy -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="font-bold text-lg mb-4">Szczeg√≥≈Çy</h2>
            
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Cena (z≈Ç)</label>
                <input 
                  type="number" 
                  name="price" 
                  value={course.price || ''}
                  step="1"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent text-lg font-bold"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Max uczestnik√≥w</label>
                <input 
                  type="number" 
                  name="maxParticipants" 
                  value={course.maxParticipants || 15}
                  min="1"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
                />
              </div>
            </div>
            
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
              <div class="flex flex-wrap gap-2">
                {statuses.map((s) => (
                  <label class={`flex items-center gap-2 px-4 py-2 rounded-lg cursor-pointer transition-all ${course.status === s.value ? s.class : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}>
                    <input 
                      type="radio" 
                      name="status" 
                      value={s.value}
                      checked={course.status === s.value}
                      class="sr-only"
                    />
                    <span class="font-medium">{s.label}</span>
                  </label>
                ))}
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Notatki</label>
              <textarea 
                name="notes" 
                rows="2"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
              >{course.notes || ''}</textarea>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex justify-between items-center">
            <button 
              type="button"
              onclick="document.getElementById('deleteModal').showModal()"
              class="text-red-600 hover:text-red-800 text-sm"
            >
              üóëÔ∏è Usu≈Ñ kurs
            </button>
            <button type="submit" class="btn-primary py-3 px-8">
              Zapisz zmiany
            </button>
          </div>
        </form>
      </div>

      <!-- Kolumna prawa: Statystyki -->
      <div class="space-y-4">
        <div class="bg-white rounded-xl shadow-sm p-4">
          <h3 class="font-bold text-gray-900 mb-3">üìä Podsumowanie</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Zapisanych:</span>
              <span class="font-bold">{totalParticipants} / {course.maxParticipants}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Dane kompletne:</span>
              <span class="font-bold text-green-600">{completedData}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Brak danych:</span>
              <span class="font-bold text-orange-600">{pendingData}</span>
            </div>
          </div>
        </div>

        <a 
          href={`/admin/reservations/new?courseId=${course.id}`}
          class="block w-full text-center bg-[var(--accent)] text-white py-3 px-4 rounded-xl font-medium hover:opacity-90 transition-opacity"
        >
          ‚ûï Dodaj uczestnika
        </a>

        {pendingData > 0 && (
          <button 
            type="button"
            onclick="sendToAllPending()"
            class="w-full text-center bg-orange-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-orange-600 transition-colors"
          >
            üì§ Wy≈õlij link do {pendingData} os√≥b
          </button>
        )}
      </div>
    </div>

    <!-- Lista uczestnik√≥w -->
    <div class="mt-8 bg-white rounded-xl shadow-sm overflow-hidden">
      <div class="p-4 border-b border-gray-100 flex items-center justify-between">
        <h2 class="font-bold text-lg">üë• Zapisani uczestnicy</h2>
        <div class="flex items-center gap-2">
          <label class="flex items-center gap-2 text-sm text-gray-600 cursor-pointer">
            <input 
              type="checkbox" 
              id="filterPending" 
              class="rounded border-gray-300 text-[var(--accent)] focus:ring-[var(--accent)]"
              onchange="filterParticipants()"
            />
            Tylko bez danych
          </label>
        </div>
      </div>

      {courseReservations.length === 0 ? (
        <div class="p-8 text-center text-gray-500">
          <div class="text-4xl mb-2">üì≠</div>
          <p>Brak zapisanych uczestnik√≥w</p>
        </div>
      ) : (
        <div class="divide-y divide-gray-100" id="participantsList">
          {courseReservations.map(({ reservation, participant }) => {
            const token = tokenMap.get(reservation.id);
            const hasData = reservation.dataCompleted;
            const lastSent = token?.sentAt;
            const payment = paymentLabels[reservation.paymentStatus || 'unpaid'];
            
            return (
              <div 
                class="p-4 hover:bg-gray-50 transition-colors participant-row"
                data-has-data={hasData ? 'true' : 'false'}
                data-reservation-id={reservation.id}
              >
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <a 
                        href={`/admin/participants/${participant?.id}`}
                        class="font-medium text-gray-900 hover:text-[var(--accent)] truncate"
                      >
                        {participant?.firstName} {participant?.lastName}
                      </a>
                      {hasData ? (
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          ‚úÖ Kompletne
                        </span>
                      ) : (
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                          ‚ö†Ô∏è Brak danych
                        </span>
                      )}
                    </div>
                    
                    <div class="flex items-center gap-4 text-sm text-gray-500">
                      <span title={participant?.phone || ''}>üì± {maskPhone(participant?.phone || null)}</span>
                      {participant?.email && (
                        <span class="truncate max-w-[150px]" title={participant.email}>üìß {participant.email}</span>
                      )}
                      <span class={payment.class}>{payment.label}</span>
                    </div>
                    
                    {!hasData && lastSent && (
                      <div class="mt-1 text-xs text-gray-400">
                        üì§ Link wys≈Çany {formatDate(lastSent)}
                      </div>
                    )}
                  </div>
                  
                  <div class="flex items-center gap-2 shrink-0">
                    {!hasData && (
                      <button
                        type="button"
                        onclick={`sendLink(${reservation.id}, '${participant?.firstName}')`}
                        class="inline-flex items-center gap-1 px-3 py-1.5 text-sm font-medium text-orange-600 bg-orange-50 rounded-lg hover:bg-orange-100 transition-colors"
                        title="Wy≈õlij link do uzupe≈Çnienia danych"
                      >
                        {lastSent ? 'üîÑ Pon√≥w' : 'üì§ Wy≈õlij'}
                      </button>
                    )}
                    <a
                      href={`/admin/reservations/${reservation.id}`}
                      class="inline-flex items-center gap-1 px-3 py-1.5 text-sm font-medium text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
                    >
                      Szczeg√≥≈Çy ‚Üí
                    </a>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      )}
    </div>
  </div>

  <!-- Delete Modal -->
  <dialog id="deleteModal" class="rounded-xl p-0 backdrop:bg-black/50">
    <div class="p-6 max-w-md">
      <h3 class="text-lg font-bold text-gray-900 mb-2">Usu≈Ñ kurs?</h3>
      <p class="text-gray-600 mb-4">
        Czy na pewno chcesz usunƒÖƒá ten kurs? Ta operacja jest nieodwracalna.
      </p>
      <div class="flex justify-end gap-2">
        <button 
          onclick="document.getElementById('deleteModal').close()"
          class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Anuluj
        </button>
        <form method="POST">
          <input type="hidden" name="action" value="delete" />
          <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
            Usu≈Ñ
          </button>
        </form>
      </div>
    </div>
  </dialog>

  <!-- Send Link Modal -->
  <dialog id="sendLinkModal" class="rounded-xl p-0 backdrop:bg-black/50">
    <div class="p-6 max-w-md">
      <h3 class="text-lg font-bold text-gray-900 mb-2">Wy≈õlij link</h3>
      <p class="text-gray-600 mb-4" id="sendLinkMessage">
        Wy≈õlij link do uzupe≈Çnienia danych
      </p>
      
      <div class="space-y-2 mb-4">
        <label class="flex items-center gap-3 p-3 border rounded-lg cursor-pointer hover:bg-gray-50 has-[:checked]:border-[var(--accent)] has-[:checked]:bg-[var(--accent)]/5">
          <input type="radio" name="sendVia" value="sms" checked class="text-[var(--accent)]" />
          <span>üì± SMS</span>
        </label>
        <label class="flex items-center gap-3 p-3 border rounded-lg cursor-pointer hover:bg-gray-50 has-[:checked]:border-[var(--accent)] has-[:checked]:bg-[var(--accent)]/5">
          <input type="radio" name="sendVia" value="email" class="text-[var(--accent)]" />
          <span>üìß Email</span>
        </label>
        <label class="flex items-center gap-3 p-3 border rounded-lg cursor-pointer hover:bg-gray-50 has-[:checked]:border-[var(--accent)] has-[:checked]:bg-[var(--accent)]/5">
          <input type="radio" name="sendVia" value="both" class="text-[var(--accent)]" />
          <span>üì±üìß Oba</span>
        </label>
      </div>
      
      <div class="flex justify-end gap-2">
        <button 
          onclick="document.getElementById('sendLinkModal').close()"
          class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Anuluj
        </button>
        <button 
          type="button"
          onclick="confirmSendLink()"
          class="px-4 py-2 bg-[var(--accent)] text-white rounded-lg hover:opacity-90"
          id="confirmSendBtn"
        >
          Wy≈õlij
        </button>
      </div>
    </div>
  </dialog>

  <script is:inline define:vars={{ pendingReservationIds: courseReservations.filter(r => !r.reservation.dataCompleted).map(r => r.reservation.id) }}>
    let currentReservationId = null;
    
    function showMessage(text, isError = false) {
      const el = document.getElementById('actionMessage');
      el.textContent = text;
      el.className = `mb-4 p-4 rounded-lg ${isError ? 'bg-red-50 border border-red-200 text-red-800' : 'bg-green-50 border border-green-200 text-green-800'}`;
      el.classList.remove('hidden');
      setTimeout(() => el.classList.add('hidden'), 5000);
    }
    
    function sendLink(reservationId, firstName) {
      currentReservationId = reservationId;
      document.getElementById('sendLinkMessage').textContent = `Wy≈õlij link do ${firstName}`;
      document.getElementById('sendLinkModal').showModal();
    }
    
    async function confirmSendLink() {
      const sendVia = document.querySelector('input[name="sendVia"]:checked').value;
      const btn = document.getElementById('confirmSendBtn');
      btn.textContent = 'Wysy≈Çam...';
      btn.disabled = true;
      
      try {
        const res = await fetch(`/api/reservations/${currentReservationId}/send-completion-link`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ sendVia })
        });
        
        const data = await res.json();
        
        if (data.success) {
          showMessage(`‚úÖ Link wys≈Çany${data.sent.sms ? ' SMS' : ''}${data.sent.email ? ' email' : ''}`);
          document.getElementById('sendLinkModal').close();
          // Od≈õwie≈º stronƒô po 1s
          setTimeout(() => location.reload(), 1000);
        } else {
          showMessage(`‚ùå ${data.error}`, true);
        }
      } catch (e) {
        showMessage('‚ùå B≈ÇƒÖd po≈ÇƒÖczenia', true);
      } finally {
        btn.textContent = 'Wy≈õlij';
        btn.disabled = false;
      }
    }
    
    async function sendToAllPending() {
      if (!confirm(`Wys≈Çaƒá SMS do ${pendingReservationIds.length} os√≥b bez kompletnych danych?`)) {
        return;
      }
      
      let sent = 0;
      let errors = 0;
      
      for (const id of pendingReservationIds) {
        try {
          const res = await fetch(`/api/reservations/${id}/send-completion-link`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sendVia: 'sms' })
          });
          const data = await res.json();
          if (data.success && data.sent.sms) sent++;
          else errors++;
        } catch {
          errors++;
        }
      }
      
      showMessage(`üì§ Wys≈Çano: ${sent}, b≈Çƒôdy: ${errors}`, errors > 0);
      if (sent > 0) setTimeout(() => location.reload(), 2000);
    }
    
    function filterParticipants() {
      const showOnlyPending = document.getElementById('filterPending').checked;
      document.querySelectorAll('.participant-row').forEach(row => {
        const hasData = row.dataset.hasData === 'true';
        row.style.display = showOnlyPending && hasData ? 'none' : '';
      });
    }
  </script>
</AdminLayout>
