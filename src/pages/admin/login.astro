---
import '../../styles/global.css';
import { generateSessionToken } from '../../middleware';

// Wymagane zmienne środowiskowe - brak fallbacków!
const ADMIN_PASSWORD = import.meta.env.ADMIN_PASSWORD || process.env.ADMIN_PASSWORD;

// Rate limiting - przechowuj w pamięci (reset przy restarcie)
const rateLimitMap = new Map<string, { attempts: number; blockedUntil: number }>();
const MAX_ATTEMPTS = 5;
const BLOCK_DURATION_MS = 15 * 60 * 1000; // 15 minut

function getClientIP(request: Request): string {
  return request.headers.get('x-forwarded-for')?.split(',')[0]?.trim() 
    || request.headers.get('x-real-ip') 
    || 'unknown';
}

function checkRateLimit(ip: string): { allowed: boolean; remainingAttempts?: number; blockedFor?: number } {
  const now = Date.now();
  const record = rateLimitMap.get(ip);
  
  if (record) {
    // Sprawdź czy jeszcze zablokowany
    if (record.blockedUntil > now) {
      const blockedFor = Math.ceil((record.blockedUntil - now) / 1000 / 60);
      return { allowed: false, blockedFor };
    }
    
    // Reset jeśli blokada minęła
    if (record.blockedUntil <= now && record.attempts >= MAX_ATTEMPTS) {
      rateLimitMap.delete(ip);
    }
  }
  
  return { allowed: true, remainingAttempts: MAX_ATTEMPTS - (record?.attempts || 0) };
}

function recordFailedAttempt(ip: string): void {
  const record = rateLimitMap.get(ip) || { attempts: 0, blockedUntil: 0 };
  record.attempts++;
  
  if (record.attempts >= MAX_ATTEMPTS) {
    record.blockedUntil = Date.now() + BLOCK_DURATION_MS;
  }
  
  rateLimitMap.set(ip, record);
}

function clearRateLimit(ip: string): void {
  rateLimitMap.delete(ip);
}

let error = '';
let configError = Astro.url.searchParams.get('error') === 'config';

// Obsłuż POST (logowanie)
if (Astro.request.method === 'POST' && ADMIN_PASSWORD) {
  const clientIP = getClientIP(Astro.request);
  const rateCheck = checkRateLimit(clientIP);
  
  if (!rateCheck.allowed) {
    error = `Zbyt wiele prób. Spróbuj za ${rateCheck.blockedFor} minut.`;
  } else {
    const formData = await Astro.request.formData();
    const password = formData.get('password');
    
    if (password === ADMIN_PASSWORD) {
      // Sukces - wyczyść rate limit i ustaw cookie z tokenem
      clearRateLimit(clientIP);
      const sessionToken = generateSessionToken(ADMIN_PASSWORD);
      const rememberMe = formData.get('remember') === 'on';
      
      Astro.cookies.set('admin_session', sessionToken, {
        path: '/',
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'lax',
        maxAge: rememberMe ? 60 * 60 * 24 * 30 : 60 * 60 * 24, // 30 dni lub 24h
      });
      return Astro.redirect('/admin');
    } else {
      // Błędne hasło
      recordFailedAttempt(clientIP);
      const remaining = MAX_ATTEMPTS - (rateLimitMap.get(clientIP)?.attempts || 0);
      error = remaining > 0 
        ? `Nieprawidłowe hasło. Pozostało prób: ${remaining}`
        : `Zbyt wiele prób. Spróbuj za 15 minut.`;
    }
  }
}
