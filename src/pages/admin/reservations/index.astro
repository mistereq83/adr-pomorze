  </div>
  
  {allReservations.length === 0 ? (
    <div class="bg-white rounded-xl shadow-sm p-8 text-center text-gray-500">
      Brak rezerwacji
    </div>
  ) : (
    <div class="space-y-3">
      {allReservations.map((r) => {
        const badge = getStatusBadge(r.reservation.status);
        const courseDate = r.course ? formatDate(r.course.startDate) : null;
        const courseType = r.course?.courseType || '';
        return (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:shadow-md transition-shadow">
