---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { db } from '../../../db';
import { courses, participants, reservations, completionTokens, smsLog } from '../../../db/schema';
import { eq, and, notInArray, count, desc } from 'drizzle-orm';
import { sendSmsForEvent } from '../../../lib/sms';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/reservations');
}

// Pobierz rezerwacjƒô z kursem i uczestnikiem
const reservation = await db.select()
  .from(reservations)
  .where(eq(reservations.id, parseInt(id)))
  .get();

if (!reservation) {
  return Astro.redirect('/admin/reservations');
}

const course = await db.select()
  .from(courses)
  .where(eq(courses.id, reservation.courseId))
  .get();

// Policz aktywne rezerwacje dla kursu (bez anulowanych)
const activeReservations = course ? await db
  .select({ count: count() })
  .from(reservations)
  .where(
    and(
      eq(reservations.courseId, course.id),
      notInArray(reservations.status, ['cancelled', 'no_show'])
    )
  ) : [{ count: 0 }];

const spotsAvailable = course ? (course.maxParticipants || 15) - activeReservations[0].count : 0;

const participant = await db.select()
  .from(participants)
  .where(eq(participants.id, reservation.participantId))
  .get();

// Pobierz ostatni token uzupe≈Çniania danych
const lastToken = await db.select()
  .from(completionTokens)
  .where(eq(completionTokens.reservationId, parseInt(id)))
  .orderBy(desc(completionTokens.createdAt))
  .limit(1)
  .get();

// Status uzupe≈Çnienia danych
const dataStatus = reservation.dataCompleted 
  ? 'completed' 
  : lastToken?.status === 'pending' 
    ? 'pending' 
    : 'none';

// Obs≈Çuga aktualizacji
let message = '';
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    
    if (action === 'update_status') {
      const newStatus = formData.get('status') as string;
      const oldStatus = reservation.status;
      
      await db.update(reservations)
        .set({ status: newStatus })
        .where(eq(reservations.id, parseInt(id)));
      
      // Wy≈õlij SMS przy zmianie statusu
      let smsResult = { success: false, error: '' };
      let linkResult = { success: false };
      
      if (newStatus === 'confirmed' && oldStatus !== 'confirmed') {
        smsResult = await sendSmsForEvent('reservation_confirmed', parseInt(id));
        
        // Automatycznie wy≈õlij link do uzupe≈Çnienia danych
        try {
          const response = await fetch(`${Astro.url.origin}/api/reservations/${id}/send-completion-link`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sendVia: 'sms' })
          });
          linkResult = await response.json();
        } catch (e) {
          console.error('Error sending completion link:', e);
        }
      } else if (newStatus === 'paid' && oldStatus !== 'paid') {
        smsResult = await sendSmsForEvent('reservation_paid', parseInt(id));
      }
      
      const parts = ['Status zaktualizowany'];
      if (smsResult.success) parts.push('SMS wys≈Çany');
      if (linkResult.success) parts.push('Link do danych wys≈Çany');
      message = parts.join(' + ');
    } else if (action === 'delete') {
      // Usu≈Ñ powiƒÖzane rekordy (foreign keys)
      await db.delete(completionTokens).where(eq(completionTokens.reservationId, parseInt(id)));
      await db.delete(smsLog).where(eq(smsLog.reservationId, parseInt(id)));
      // Potem usu≈Ñ rezerwacjƒô
      await db.delete(reservations).where(eq(reservations.id, parseInt(id)));
      return Astro.redirect('/admin/reservations?msg=deleted');
    }
    
    // Od≈õwie≈º dane
    return Astro.redirect(`/admin/reservations/${id}?msg=updated`);
  } catch (e) {
    console.error(e);
    message = 'B≈ÇƒÖd podczas aktualizacji';
  }
}

if (Astro.url.searchParams.get('msg') === 'updated') {
  message = 'Dane zaktualizowane';
}

const statusLabels: Record<string, string> = {
  pending: 'OczekujƒÖca',
  confirmed: 'Potwierdzona',
  paid: 'Op≈Çacona',
  completed: 'Zako≈Ñczona',
  cancelled: 'Anulowana',
};

const statusColors: Record<string, string> = {
  pending: 'bg-yellow-100 text-yellow-800',
  confirmed: 'bg-blue-100 text-blue-800',
  paid: 'bg-green-100 text-green-800',
  completed: 'bg-gray-100 text-gray-800',
  cancelled: 'bg-red-100 text-red-800',
};
---

<AdminLayout title={`Rezerwacja #${id}`}>
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Szczeg√≥≈Çy rezerwacji #{id}</h1>
      <a href="/admin/reservations" class="text-gray-600 hover:text-gray-900">
        ‚Üê Powr√≥t do listy
      </a>
    </div>

    {message && (
      <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800">
        {message}
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Informacje o uczestniku -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
          <span class="text-2xl">üë§</span> Uczestnik
        </h2>
        {participant ? (
          <dl class="space-y-3">
            <div>
              <dt class="text-sm text-gray-500">Imiƒô i nazwisko</dt>
              <dd class="font-medium">{participant.firstName} {participant.lastName}</dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Telefon</dt>
              <dd class="font-medium">
                <a href={`tel:${participant.phone}`} class="text-orange-600 hover:underline">
                  {participant.phone}
                </a>
              </dd>
            </div>
            {participant.email && (
              <div>
                <dt class="text-sm text-gray-500">Email</dt>
                <dd class="font-medium">
                  <a href={`mailto:${participant.email}`} class="text-orange-600 hover:underline">
                    {participant.email}
                  </a>
                </dd>
              </div>
            )}
            {participant.pesel && (
              <div>
                <dt class="text-sm text-gray-500">PESEL</dt>
                <dd class="font-medium font-mono">{participant.pesel}</dd>
              </div>
            )}
            <div>
              <dt class="text-sm text-gray-500">Aktualne ADR</dt>
              <dd class="font-medium">
                {participant.hasCurrentAdr ? (
                  <span class="text-green-600">Tak {participant.currentAdrNumber && `(${participant.currentAdrNumber})`}</span>
                ) : (
                  <span class="text-gray-500">Nie</span>
                )}
              </dd>
            </div>
          </dl>
        ) : (
          <p class="text-gray-500">Brak danych uczestnika</p>
        )}
      </div>

      <!-- Informacje o kursie -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
          <span class="text-2xl">üìö</span> Kurs
        </h2>
        {course ? (
          <dl class="space-y-3">
            <div>
              <dt class="text-sm text-gray-500">Typ kursu</dt>
              <dd class="font-medium capitalize">{course.type === 'podstawowy' ? 'Podstawowy' : 'Przed≈Çu≈ºenie'}</dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Data rozpoczƒôcia</dt>
              <dd class="font-medium">{new Date(course.startDate).toLocaleDateString('pl-PL')}</dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Data zako≈Ñczenia</dt>
              <dd class="font-medium">{new Date(course.endDate).toLocaleDateString('pl-PL')}</dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Miejsca</dt>
              <dd class="font-medium">{spotsAvailable} / {course.maxParticipants}</dd>
            </div>
          </dl>
        ) : (
          <p class="text-gray-500">Brak danych kursu</p>
        )}
      </div>

      <!-- Status rezerwacji -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:col-span-2">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
          <span class="text-2xl">üìã</span> Status
        </h2>
        <div class="flex flex-wrap gap-2">
          <form method="POST">
            <input type="hidden" name="action" value="update_status" />
            <input type="hidden" name="status" value="pending" />
            <button type="submit" class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${reservation.status === 'pending' ? 'bg-yellow-500 text-white ring-2 ring-yellow-300' : 'bg-yellow-50 text-yellow-700 hover:bg-yellow-100'}`}>
              ‚è≥ OczekujƒÖca
            </button>
          </form>
          <form method="POST">
            <input type="hidden" name="action" value="update_status" />
            <input type="hidden" name="status" value="confirmed" />
            <button type="submit" class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${reservation.status === 'confirmed' ? 'bg-blue-500 text-white ring-2 ring-blue-300' : 'bg-blue-50 text-blue-700 hover:bg-blue-100'}`}>
              ‚úì Potwierdzona
            </button>
          </form>
          <form method="POST">
            <input type="hidden" name="action" value="update_status" />
            <input type="hidden" name="status" value="paid" />
            <button type="submit" class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${reservation.status === 'paid' ? 'bg-green-500 text-white ring-2 ring-green-300' : 'bg-green-50 text-green-700 hover:bg-green-100'}`}>
              üí∞ Op≈Çacona
            </button>
          </form>
          <form method="POST">
            <input type="hidden" name="action" value="update_status" />
            <input type="hidden" name="status" value="completed" />
            <button type="submit" class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${reservation.status === 'completed' ? 'bg-gray-500 text-white ring-2 ring-gray-300' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}>
              ‚úî Zako≈Ñczona
            </button>
          </form>
          <form method="POST">
            <input type="hidden" name="action" value="update_status" />
            <input type="hidden" name="status" value="cancelled" />
            <button type="submit" class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${reservation.status === 'cancelled' ? 'bg-red-500 text-white ring-2 ring-red-300' : 'bg-red-50 text-red-700 hover:bg-red-100'}`}>
              ‚úï Anulowana
            </button>
          </form>
        </div>
      </div>

      <!-- Dane do faktury -->
      {reservation.needsInvoice && (
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:col-span-2">
          <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <span class="text-2xl">üßæ</span> Dane do faktury
          </h2>
          <dl class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-sm text-gray-500">Firma</dt>
              <dd class="font-medium">{reservation.invoiceCompany || '-'}</dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">NIP</dt>
              <dd class="font-medium font-mono">{reservation.invoiceNip || '-'}</dd>
            </div>
          </dl>
        </div>
      )}

      <!-- Notatki i metadane -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:col-span-2">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
          <span class="text-2xl">üìù</span> Dodatkowe informacje
        </h2>
        <dl class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div>
            <dt class="text-sm text-gray-500">≈πr√≥d≈Ço</dt>
            <dd class="font-medium capitalize">{reservation.source === 'manual' ? 'Rƒôcznie' : reservation.source}</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Data zg≈Çoszenia</dt>
            <dd class="font-medium">{new Date(reservation.createdAt).toLocaleDateString('pl-PL')}</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Faktura</dt>
            <dd class="font-medium">{reservation.needsInvoice ? 'Tak' : 'Nie'}</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">ID rezerwacji</dt>
            <dd class="font-medium font-mono">#{reservation.id}</dd>
          </div>
        </dl>
        {reservation.notes && (
          <div class="mt-4 pt-4 border-t">
            <dt class="text-sm text-gray-500 mb-1">Notatki</dt>
            <dd class="text-gray-700 whitespace-pre-wrap">{reservation.notes}</dd>
          </div>
        )}
      </div>
    </div>

    <!-- Uzupe≈Çnianie danych przez uczestnika -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mt-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold flex items-center gap-2">
          <span class="text-2xl">üìù</span> Dane od uczestnika
        </h2>
        <span class={`px-3 py-1 rounded-full text-sm font-medium ${
          dataStatus === 'completed' ? 'bg-green-100 text-green-800' :
          dataStatus === 'pending' ? 'bg-yellow-100 text-yellow-800' :
          'bg-gray-100 text-gray-800'
        }`}>
          {dataStatus === 'completed' ? '‚úÖ Kompletne' :
           dataStatus === 'pending' ? '‚è≥ Oczekuje' :
           'üî¥ Brak'}
        </span>
      </div>
      
      {dataStatus === 'completed' ? (
        <p class="text-gray-600 text-sm mb-4">
          Uczestnik uzupe≈Çni≈Ç dane {reservation.dataCompletedAt && `dnia ${new Date(reservation.dataCompletedAt).toLocaleDateString('pl-PL')}`}.
          <a href={`/admin/participants/${participant?.id}`} class="text-[var(--accent)] hover:underline ml-1">
            Zobacz profil ‚Üí
          </a>
        </p>
      ) : dataStatus === 'pending' && lastToken ? (
        <div class="text-sm text-gray-600 mb-4">
          <p>Link wys≈Çany {lastToken.sentAt && new Date(lastToken.sentAt).toLocaleDateString('pl-PL')}.</p>
          <p>Wa≈ºny do: <span class="font-medium">{new Date(lastToken.expiresAt).toLocaleDateString('pl-PL')}</span></p>
        </div>
      ) : (
        <p class="text-gray-600 text-sm mb-4">
          Wy≈õlij uczestnikowi link do uzupe≈Çnienia pe≈Çnych danych (PESEL, adres, itp.).
        </p>
      )}
      
      <div class="flex gap-3">
        <button 
          id="sendLinkBtn"
          class="px-4 py-2 bg-[var(--accent)] text-white rounded-lg hover:bg-opacity-90 transition-colors flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
          {dataStatus === 'none' ? 'Wy≈õlij link' : 'Wy≈õlij ponownie'}
        </button>
        
        {lastToken?.status === 'pending' && (
          <button 
            id="copyLinkBtn"
            data-token={lastToken.token}
            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm"
          >
            üìã Kopiuj link
          </button>
        )}
      </div>
    </div>
    
    <script define:vars={{ reservationId: id }}>
      document.getElementById('sendLinkBtn')?.addEventListener('click', async () => {
        const btn = document.getElementById('sendLinkBtn');
        btn.disabled = true;
        btn.textContent = 'Wysy≈Çanie...';
        
        try {
          const response = await fetch(`/api/reservations/${reservationId}/send-completion-link`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sendVia: 'sms' })
          });
          
          const result = await response.json();
          
          if (response.ok) {
            alert('Link wys≈Çany SMS-em!');
            window.location.reload();
          } else {
            alert('B≈ÇƒÖd: ' + (result.error || 'Nieznany b≈ÇƒÖd'));
          }
        } catch (error) {
          alert('B≈ÇƒÖd wysy≈Çania: ' + error.message);
        } finally {
          btn.disabled = false;
          btn.textContent = 'Wy≈õlij link';
        }
      });
      
      document.getElementById('copyLinkBtn')?.addEventListener('click', () => {
        const token = document.getElementById('copyLinkBtn').dataset.token;
        const url = `${window.location.origin}/uzupelnij-dane/${token}`;
        navigator.clipboard.writeText(url);
        alert('Link skopiowany do schowka!');
      });
    </script>

    <!-- Akcje -->
    <div class="mt-6 flex justify-between items-center">
      <button 
        type="button"
        onclick="document.getElementById('deleteModal').showModal()"
        class="px-4 py-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-colors"
      >
        üóëÔ∏è Usu≈Ñ rezerwacjƒô
      </button>
      <a href="/admin/reservations" class="px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
        Powr√≥t do listy
      </a>
    </div>
  </div>

  <!-- Modal usuwania -->
  <dialog id="deleteModal" class="rounded-xl p-0 backdrop:bg-black/50">
    <div class="p-6 max-w-md">
      <h3 class="text-lg font-bold text-gray-900 mb-2">üóëÔ∏è Usu≈Ñ rezerwacjƒô?</h3>
      <p class="text-gray-600 mb-4">
        Czy na pewno chcesz usunƒÖƒá tƒô rezerwacjƒô? Ta operacja jest nieodwracalna.
      </p>
      <div class="flex justify-end gap-2">
        <button 
          onclick="document.getElementById('deleteModal').close()"
          class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Anuluj
        </button>
        <form method="POST">
          <input type="hidden" name="action" value="delete" />
          <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
            Usu≈Ñ
          </button>
        </form>
      </div>
    </div>
  </dialog>
</AdminLayout>
