---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { db } from '../../../db';
import { courses, participants, reservations } from '../../../db/schema';
import { eq, gte, asc } from 'drizzle-orm';
import { validateAndNormalizePhone } from '../../../lib/phone';

let error = '';
const preselectedParticipantId = Astro.url.searchParams.get('participantId');
const preselectedCourseId = Astro.url.searchParams.get('courseId');

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    
    let participantId = formData.get('participantId') as string;
    
    if (!participantId || participantId === 'new') {
      // Walidacja i normalizacja numeru telefonu
      const rawPhone = formData.get('phone') as string;
      const normalizedPhone = validateAndNormalizePhone(rawPhone);
      
      if (!normalizedPhone) {
        error = 'Nieprawid≈Çowy numer telefonu. Podaj 9-cyfrowy polski numer kom√≥rkowy.';
        throw new Error(error);
      }
      
      const newParticipant = await db.insert(participants).values({
        firstName: formData.get('firstName') as string,
        lastName: formData.get('lastName') as string,
        phone: normalizedPhone,
        email: formData.get('email') as string || null,
        pesel: formData.get('pesel') as string || null,
        hasCurrentAdr: formData.get('hasCurrentAdr') === 'on',
        currentAdrNumber: formData.get('currentAdrNumber') as string || null,
        createdAt: new Date().toISOString(),
      }).returning();
      
      participantId = newParticipant[0].id.toString();
    }
    
    await db.insert(reservations).values({
      courseId: parseInt(formData.get('courseId') as string),
      participantId: parseInt(participantId),
      status: formData.get('status') as string || 'confirmed',
      needsInvoice: formData.get('needsInvoice') === 'on',
      invoiceCompany: formData.get('invoiceCompany') as string || null,
      invoiceNip: formData.get('invoiceNip') as string || null,
      source: 'manual',
      notes: formData.get('notes') as string || null,
      createdAt: new Date().toISOString(),
    });
    
    return Astro.redirect('/admin/reservations');
  } catch (e) {
    console.error(e);
    error = 'B≈ÇƒÖd podczas dodawania rezerwacji';
  }
}

const today = new Date().toISOString().split('T')[0];
const openCourses = await db.select()
  .from(courses)
  .where(eq(courses.status, 'open'))
  .orderBy(asc(courses.startDate));

const allParticipants = await db.select()
  .from(participants)
  .orderBy(participants.lastName)
  .limit(200);

const preselectedParticipant = preselectedParticipantId 
  ? allParticipants.find(p => p.id === parseInt(preselectedParticipantId))
  : null;

const preselectedCourse = preselectedCourseId 
  ? openCourses.find(c => c.id === parseInt(preselectedCourseId))
  : null;

function getCourseTypeLabel(type: string) {
  const labels: Record<string, string> = {
    'podstawowy': 'Podstawowy',
    'cysterny': 'Cysterny',
    'klasa1': 'Klasa 1',
    'klasa7': 'Klasa 7',
    'odnowienie': 'Odnowienie',
  };
  return labels[type] || type;
}

function formatDateShort(dateStr: string) {
  const d = new Date(dateStr);
  return d.toLocaleDateString('pl-PL', { day: '2-digit', month: '2-digit' });
}
---

<AdminLayout title="Dodaj rezerwacjƒô">
  <div class="max-w-2xl mx-auto">
    <a href="/admin/reservations" class="text-gray-500 hover:text-gray-700 text-sm mb-4 inline-flex items-center gap-1">
      ‚Üê Powr√≥t do rezerwacji
    </a>
    
    {error && (
      <div class="bg-red-50 text-red-700 p-4 rounded-lg mb-4">{error}</div>
    )}
    
    <form method="POST" class="space-y-6">
      <!-- KROK 1: Wyb√≥r kursu -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
          <span class="w-7 h-7 bg-[var(--accent)] text-white rounded-full flex items-center justify-center text-sm">1</span>
          Kurs
        </h2>
        
        {preselectedCourse ? (
          <!-- Preselected course -->
          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="font-bold text-green-800">
              {formatDateShort(preselectedCourse.startDate)} - {formatDateShort(preselectedCourse.endDate)}
              <span class="ml-2 px-2 py-0.5 bg-green-100 text-green-700 text-xs rounded">{getCourseTypeLabel(preselectedCourse.courseType)}</span>
            </div>
            <div class="text-sm text-green-600">{preselectedCourse.maxParticipants} miejsc</div>
            <input type="hidden" name="courseId" value={preselectedCourse.id} />
          </div>
        ) : (
          <div class="grid gap-2" id="courseList">
            {openCourses.length === 0 ? (
              <p class="text-gray-500">Brak otwartych kurs√≥w</p>
            ) : (
              openCourses.map((c, i) => (
                <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:border-[var(--accent)] cursor-pointer transition-colors has-[:checked]:border-[var(--accent)] has-[:checked]:bg-[var(--accent)]/5">
                  <input 
                    type="radio" 
                    name="courseId" 
                    value={c.id} 
                    required
                    checked={i === 0}
                    class="w-4 h-4 text-[var(--accent)]"
                  />
                  <div class="flex-1 min-w-0">
                    <div class="font-medium">
                      {formatDateShort(c.startDate)} - {formatDateShort(c.endDate)}
                    <span class="ml-2 px-2 py-0.5 bg-blue-100 text-blue-800 text-xs rounded">{getCourseTypeLabel(c.courseType)}</span>
                  </div>
                  <div class="text-sm text-gray-500">{c.maxParticipants} miejsc</div>
                </div>
              </label>
            ))
          )}
          </div>
        )}
      </div>

      <!-- KROK 2: Uczestnik -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
          <span class="w-7 h-7 bg-[var(--accent)] text-white rounded-full flex items-center justify-center text-sm">2</span>
          Uczestnik
        </h2>
        
        {preselectedParticipant ? (
          <!-- Preselected participant -->
          <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
            <div class="font-bold text-green-800">{preselectedParticipant.lastName} {preselectedParticipant.firstName}</div>
            <div class="text-sm text-green-600">{preselectedParticipant.phone}</div>
            <input type="hidden" name="participantId" value={preselectedParticipant.id} />
          </div>
        ) : (
          <>
            <!-- Toggle: Nowy / IstniejƒÖcy -->
            <div class="flex gap-2 mb-4">
              <button 
                type="button" 
                id="btnNew"
                onclick="showNewParticipant()"
                class="flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-[var(--accent)] text-white"
              >
                ‚ûï Nowy uczestnik
              </button>
              <button 
                type="button"
                id="btnExisting" 
                onclick="showExistingParticipant()"
                class="flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-gray-100 text-gray-700 hover:bg-gray-200"
              >
                üîç Szukaj w bazie
              </button>
            </div>
            
            <!-- Panel: Nowy uczestnik -->
            <div id="panelNew" class="space-y-4">
              <input type="hidden" name="participantId" value="new" id="participantIdField" />
              
              <div class="grid grid-cols-2 gap-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Imiƒô *</label>
                  <input type="text" name="firstName" required id="firstName"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Nazwisko *</label>
                  <input type="text" name="lastName" required id="lastName"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent" />
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Telefon *</label>
                <input type="tel" name="phone" required id="phone"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent" />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" name="email" id="email"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent" />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">PESEL</label>
                <input type="text" name="pesel" maxlength="11" id="pesel"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent font-mono" />
              </div>
            </div>
            
            <!-- Panel: Szukaj istniejƒÖcego -->
            <div id="panelExisting" class="hidden">
              <div class="mb-3">
                <input 
                  type="text" 
                  id="searchInput"
                  placeholder="Wpisz nazwisko lub telefon..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
                  oninput="filterParticipants(this.value)"
                />
              </div>
              
              <div id="participantsList" class="max-h-64 overflow-y-auto space-y-2">
                {allParticipants.map(p => (
                  <label 
                    class="participant-item flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:border-[var(--accent)] cursor-pointer transition-colors has-[:checked]:border-[var(--accent)] has-[:checked]:bg-[var(--accent)]/5"
                    data-search={`${p.lastName} ${p.firstName} ${p.phone}`.toLowerCase()}
                  >
                    <input 
                      type="radio" 
                      name="existingParticipant" 
                      value={p.id}
                      onchange="selectExistingParticipant(this.value)"
                      class="w-4 h-4 text-[var(--accent)]"
                    />
                    <div>
                      <div class="font-medium">{p.lastName} {p.firstName}</div>
                      <div class="text-sm text-gray-500">{p.phone}</div>
                    </div>
                  </label>
                ))}
              </div>
            </div>
          </>
        )}
      </div>

      <!-- KROK 3: Szczeg√≥≈Çy -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
          <span class="w-7 h-7 bg-[var(--accent)] text-white rounded-full flex items-center justify-center text-sm">3</span>
          Szczeg√≥≈Çy
        </h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
            <div class="flex flex-wrap gap-2">
              <label class="flex items-center gap-2 px-3 py-2 border rounded-lg cursor-pointer has-[:checked]:border-yellow-500 has-[:checked]:bg-yellow-50">
                <input type="radio" name="status" value="pending" class="text-yellow-500" />
                <span>‚è≥ OczekujƒÖca</span>
              </label>
              <label class="flex items-center gap-2 px-3 py-2 border rounded-lg cursor-pointer has-[:checked]:border-blue-500 has-[:checked]:bg-blue-50">
                <input type="radio" name="status" value="confirmed" checked class="text-blue-500" />
                <span>‚úì Potwierdzona</span>
              </label>
              <label class="flex items-center gap-2 px-3 py-2 border rounded-lg cursor-pointer has-[:checked]:border-green-500 has-[:checked]:bg-green-50">
                <input type="radio" name="status" value="paid" class="text-green-500" />
                <span>üí∞ Op≈Çacona</span>
              </label>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Notatki</label>
            <textarea name="notes" rows="2" 
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--accent)] focus:border-transparent"
              placeholder="Opcjonalne uwagi..."></textarea>
          </div>
        </div>
      </div>

      <!-- Submit -->
      <button type="submit" class="w-full btn-primary py-4 text-lg">
        Dodaj rezerwacjƒô
      </button>
    </form>
  </div>

  <script is:inline>
    function showNewParticipant() {
      document.getElementById('panelNew').classList.remove('hidden');
      document.getElementById('panelExisting').classList.add('hidden');
      document.getElementById('btnNew').className = 'flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-[var(--accent)] text-white';
      document.getElementById('btnExisting').className = 'flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-gray-100 text-gray-700 hover:bg-gray-200';
      document.getElementById('participantIdField').value = 'new';
      // Make new participant fields required
      document.getElementById('firstName').required = true;
      document.getElementById('lastName').required = true;
      document.getElementById('phone').required = true;
    }
    
    function showExistingParticipant() {
      document.getElementById('panelNew').classList.add('hidden');
      document.getElementById('panelExisting').classList.remove('hidden');
      document.getElementById('btnExisting').className = 'flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-[var(--accent)] text-white';
      document.getElementById('btnNew').className = 'flex-1 py-2 px-4 rounded-lg font-medium transition-all bg-gray-100 text-gray-700 hover:bg-gray-200';
      // Remove required from new participant fields
      document.getElementById('firstName').required = false;
      document.getElementById('lastName').required = false;
      document.getElementById('phone').required = false;
    }
    
    function selectExistingParticipant(id) {
      document.getElementById('participantIdField').value = id;
    }
    
    function filterParticipants(query) {
      const items = document.querySelectorAll('.participant-item');
      const q = query.toLowerCase();
      items.forEach(item => {
        const searchText = item.dataset.search;
        item.style.display = searchText.includes(q) ? 'flex' : 'none';
      });
    }
  </script>
</AdminLayout>
